<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2861FE"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/header_image"/>




            </androidx.cardview.widget.CardView>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:elevation="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_margin="15dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:id="@+id/home_button"
                                android:background="@android:color/white"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:elevation="20dp">


                                <ImageView
                                    android:id="@+id/home_alll_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_baseline_home_24"/>

                                <TextView
                                    android:layout_below="@id/home_alll_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:text="All districts"/>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:elevation="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_margin="15dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:background="@android:color/white"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:elevation="20dp">


                                <ImageView
                                    android:id="@+id/home_compare_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_baseline_compare_arrows_24"/>

                                <TextView
                                    android:layout_below="@id/home_compare_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:text="Compare District"/>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:elevation="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:background="@android:color/white"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:elevation="20dp">


                                <ImageView
                                    android:id="@+id/home_aboutapp_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_baseline_perm_device_information_24"/>

                                <TextView
                                    android:layout_below="@id/home_aboutapp_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:text="About App"/>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:elevation="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:background="@android:color/white"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:elevation="20dp">


                                <ImageView
                                    android:id="@+id/home_other_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_baseline_devices_other_24"/>

                                <TextView
                                    android:layout_below="@id/home_other_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:text="Other App"/>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>




                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">



                        <androidx.cardview.widget.CardView
                            android:elevation="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:id="@+id/about_us_app"
                                android:background="@android:color/white"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:elevation="20dp">


                                <ImageView
                                    android:id="@+id/home_aboutus_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_baseline_person_search_24"/>

                                <TextView
                                    android:layout_below="@id/home_aboutus_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:text="About me"/>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:elevation="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="5dp"
                            app:cardCornerRadius="10dp"
                            android:layout_height="100dp">

                            <RelativeLayout
                                android:id="@+id/share_app"
                                android:background="@android:color/white"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                android:elevation="20dp">


                                <ImageView
                                    android:id="@+id/home_share_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_baseline_share_24"/>

                                <TextView
                                    android:layout_below="@id/home_share_ditrict_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp"
                                    android:layout_centerHorizontal="true"
                                    android:text="Share App"/>


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>




                    </LinearLayout>



                </LinearLayout>













        </LinearLayout>


    </ScrollView>





</LinearLayout>